@model CyberRiskManager.Models.Riesgo
@using CyberRiskManager.Models

@{
    ViewData["Title"] = "Registrar riesgo";
    var activos = ViewBag.Activos as List<Activo>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Activo afectado</label>
        <select asp-for="ActivoId" class="form-select">
            @foreach (var a in activos!)
            {
                <option value="@a.Id">@a.Nombre</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Amenaza</label>
        <input asp-for="Amenaza" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Vulnerabilidad</label>
        <input asp-for="Vulnerabilidad" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Controles existentes</label>
        <textarea asp-for="ControlesExistentes" class="form-control"></textarea>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label>Probabilidad</label>
            <input asp-for="Probabilidad" type="range" min="1" max="3" class="form-range" oninput="updateLabel(this,'p')" />
            <span id="label-p">Media</span>
        </div>
        <div class="col">
            <label>Impacto</label>
            <input asp-for="Impacto" type="range" min="1" max="3" class="form-range" oninput="updateLabel(this,'i')" />
            <span id="label-i">Media</span>
        </div>
    </div>

    <button class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script>
        const etiquetas = { 1: 'Baja 🟢', 2: 'Media 🟠', 3: 'Alta 🔴' };
        function updateLabel(input, id) {
            document.getElementById('label-' + id).innerText = etiquetas[input.value];
        }
        document.addEventListener('DOMContentLoaded', () => {
            updateLabel(document.querySelector('[asp-for="Probabilidad"]'), 'p');
            updateLabel(document.querySelector('[asp-for="Impacto"]'), 'i');
        });
    </script>
}
