@model CyberRiskManager.ViewModels.RiesgoCreateVM
@using CyberRiskManager.Models

<h2>Nuevo Riesgo</h2>
<form asp-action="Create" method="post">
    <input asp-for="Riesgo.Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label">Activo</label>
        <select asp-for="Riesgo.ActivoId"
                asp-items="@(new SelectList(Model.Activos, "Id", "Nombre"))"
                class="form-select"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Amenaza</label>
        <input asp-for="Riesgo.Amenaza" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Vulnerabilidad</label>
        <input asp-for="Riesgo.Vulnerabilidad" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Controles existentes</label>
        <textarea asp-for="Riesgo.ControlesExistentes" class="form-control"></textarea>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label>Probabilidad (1‑3)</label>
            <input asp-for="Riesgo.Probabilidad" type="number" min="1" max="3" class="form-control" />
        </div>
        <div class="col">
            <label>Impacto (1‑3)</label>
            <input asp-for="Riesgo.Impacto" type="number" min="1" max="3" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
