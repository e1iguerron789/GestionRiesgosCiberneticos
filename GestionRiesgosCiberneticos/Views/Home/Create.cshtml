@model CyberRiskManager.Models.Activo
@using CyberRiskManager.Models

<h2>Nuevo Activo</h2>

<form asp-action="Create" method="post">
    <label>Nombre</label>
    <input asp-for="Nombre" class="form-control" />

    <label>Tipo</label>
    <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoActivo>()" class="form-select"></select>

    <label>Descripción</label>
    <textarea asp-for="Descripcion" class="form-control"></textarea>

    <div class="row">
        <div class="col"><label>Confidencialidad</label><input asp-for="Confidencialidad" type="number" min="1" max="3" class="form-control" /></div>
        <div class="col"><label>Integridad</label><input asp-for="Integridad" type="number" min="1" max="3" class="form-control" /></div>
        <div class="col"><label>Disponibilidad</label><input asp-for="Disponibilidad" type="number" min="1" max="3" class="form-control" /></div>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
</form>
